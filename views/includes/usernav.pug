block content
    -let mydashboard = user.organization
    -let profileUrl = user.organization+ "/profile"
    -let imageUrl = '/uploads/profile/' + profile
    -let deleteUrl = user.organization + "/delete"
    header(id="header" class="navbar-head")
        div(class="container")
            div(class="logo float-left")
                a(href='/' class="navbar-brand") Ace Africa
            nav(class="menu-cust float-right")
                ul
                    li(class="dropdown")
                        if user

                            a(href="#" class="dropdown-toggle" id="dropdown01" 
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                img(src="/uploads/profile/default.jpeg" alt="profile" class="rounded-circle" width="30" height="25")
                                span(class="pl-2") #{user.name}
                            div(class="dropdown-menu" aria-labelledby="dropdown01")
                                a(class="dropdown-item" href=profileUrl) Profile Information
                                a(class="dropdown-item" href="#") Change Profile Image
                                a(class="dropdown-item" href=deleteUrl) Delete Account
                                a(class="dropdown-item" href="/logout") Log Out                              
                   
            div(class="clearfix")
                        