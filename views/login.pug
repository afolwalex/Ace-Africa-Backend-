include includes/header2.pug
block content
    div(class="form-field")
        div(class="container")
            div(class="row justify-content-center")
                div(class="col-lg-7")
                    div(class="form-box shadow")
                        h2 Login
                        em(class="mb-2") Sign in and stay connected
                        form(method="POST" action="#")
                            if error 
                                p.error  #{error}
                            p(class="mt-4")
                                label Email * 
                                span(class="ml-2 email_feedback") 
                                input(type="text" class="form-control" name="email" id="email" required)
                            p
                                label Password *
                                span(class="ml-2 password_feedback") 
                                input(type="password" class="form-control" name="password" id="password" required)
                            p(class="float-left")
                                input(type="checkbox" id="check")
                                span Remember Me
                            p(class="float-right")
                                a(href="") Forgot Password?
                            div(class="clearfix")
                            div(class="text-center")
                                button(type="submit" class="btn btn-submit" id="submit") Login
                            div
                                a(href="/digital-skills" class="home-page") Back to Digital Skills
    include includes/footer.pug
    